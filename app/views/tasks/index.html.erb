<h1>All Tasks</h1>

<%= link_to 'New Task', new_task_path, class: 'btn btn-primary mb-3' %>

<% if @tasks.any? %>
  <ul class="list-group">
    <% @tasks.each do |task| %>
      <li class="list-group-item">
        <strong><%= link_to task.title, task %></strong><br>
        <small><em>Category: <%= task.category %> | Status: <%= task.status %></em></small><br>
        Description: <%= task.description.truncate(100) %><br>
        Budget: ZMK <%= task.budget %><br>
        Deadline: <%= task.deadline.strftime('%B %d, %Y %I:%M %p') %><br>

        <%= link_to 'Edit', edit_task_path(task), class: 'btn btn-warning btn-sm' %> |
        <%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No tasks available.</p>
<% end %>
