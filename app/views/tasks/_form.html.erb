<%= form_with(model: task, local: true, html: { class: 'needs-validation', novalidate: true, multipart: true }) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation" class="alert alert-danger" role="alert">
      <h4 class="alert-heading"><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h4>
      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :client_id, value: current_user.id %>

  <div class="container mt-4">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <h1 class="text-center mb-4" style="color: #2A2A2A;">Create a New Task</h1>

        <!-- Live Price Preview -->
        <div id="price-preview" class="alert alert-info text-center">
          <strong>Current Price: </strong>
          <span id="live-price">ZMK 30.00</span>
        </div>

        <!-- Title -->
        <div class="form-group mb-3">
          <%= form.label :title, class: 'form-label' %>
          <%= form.text_field :title, class: 'form-control', placeholder: 'Enter a catchy title for your task' %>
        </div>

        <!-- Description -->
        <div class="form-group mb-3">
          <%= form.label :description, class: 'form-label' %>
          <%= form.text_area :description, class: 'form-control', rows: 3, placeholder: 'What needs to be done?' %>
        </div>

        <!-- Number of Pages -->
        <div class="form-group mb-3">
          <label for="pages" class="form-label">Number of pages:</label>
          <input type="number" id="pages" name="pages" class="form-control" min="1" value="1" onchange="calculatePrice()">
        </div>

        <!-- Price -->
        <div class="form-group mb-3">
          <label for="price" class="form-label">Price ZMK:</label>
          <input type="text" id="price" class="form-control" readonly>
        </div>

        <!-- Budget -->
        <div class="form-group mb-3">
          <%= form.label :budget, class: 'form-label' %>
          <%= form.number_field :budget, class: 'form-control', readonly: true %>
        </div>

        <!-- Category -->
        <div class="form-group mb-3">
          <%= form.label :category, class: 'form-label' %>
          <%= form.text_field :category, class: 'form-control', placeholder: 'e.g. Web Development' %>
        </div>

        <!-- Deadline -->
        <div class="form-group mb-3">
          <%= form.label :deadline, class: 'form-label' %>
          <%= form.datetime_select :deadline, class: 'form-control' %>
        </div>

        <!-- Attachment -->
        <div class="form-group mb-3">
          <%= form.label :attachment, class: 'form-label' %>
          <%= form.file_field :attachment, direct_upload: true, class: 'form-control-file' %>
        </div>

        <!-- Submit Button -->
        <div class="actions">
          <%= form.submit 'Create Task', class: 'btn btn-primary btn-block', style: 'background-color: #FF6F61; border-color: #FF6F61;' %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<script>
  const COST_PER_PAGE = 30; // Cost per page in ZMK

  function calculatePrice() {
    // Get references to input fields
    const pagesInput = document.getElementById("pages");
    const priceInput = document.getElementById("price");
    const budgetInput = document.querySelector('input[name="task[budget]"]');
    const livePrice = document.getElementById("live-price");

    if (!pagesInput || !priceInput || !budgetInput || !livePrice) return;

    // Calculate price
    const pages = parseInt(pagesInput.value, 10) || 1; // Default to 1 if invalid
    const price = pages * COST_PER_PAGE;

    // Update fields
    priceInput.value = price.toFixed(2);
    budgetInput.value = price.toFixed(2);
    livePrice.textContent = `ZMK ${price.toFixed(2)}`;
  }

  // Initialize price when page loads
  document.addEventListener("DOMContentLoaded", () => {
    calculatePrice();
  });
</script>
