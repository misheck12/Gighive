<!-- app/views/reviews/new.html.erb -->
<h2 class="text-center mb-4" style="color: #2A2A2A;">New Review for <%= @task.title %></h2>

<%= form_with(model: [@task, @review], local: true, html: { class: 'needs-validation', novalidate: true }) do |f| %>
  <% if payment.errors.any? %>
    <div id="error_explanation" class="alert alert-danger" role="alert">
      <h2 class="alert-heading"><%= pluralize(payment.errors.count, "error") %> prohibited this payment from being saved:</h2>
      <ul>
        <% payment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container mt-4">
    <div class="row justify-content-center">
      <div class="col-md-6">

        <div class="form-group mb-3">
          <%= f.label :rating, class: 'form-label' %>
          <%= f.number_field :rating, in: 1..5, required: true, class: 'form-control' %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :comment, class: 'form-label' %>
          <%= f.text_area :comment, maxlength: 500, class: 'form-control', rows: 4 %>
        </div>

        <div class="actions">
          <%= f.submit "Create Review", class: 'btn btn-block', style: 'background-color: #2A2A2A; color: #FF6F61; border-color: #2A2A2A;' %>
        </div>

      </div>
    </div>
  </div>
<% end %>

<%= link_to 'Back to Task', task_path(@task), class: 'btn btn-block mt-3', style: 'background-color: #2A2A2A; color: #FF6F61; border-color: #2A2A2A;' %>

<style>
  .field {
    margin-bottom: 1em;
  }

  .form-label {
    font-weight: bold;
    color: #2A2A2A; /* Charcoal for form labels */
  }

  .form-control {
    width: 100%;
    padding: 0.375rem 0.75rem;
    border: 1px solid #ced4da;
    border-radius: 0.25rem;
    margin-bottom: 1rem;
  }

  #error_explanation {
    background-color: #FFD700; /* Gold for error background */
    border: 1px solid #2A2A2A; /* Charcoal border */
    padding: 1rem;
    margin-bottom: 1rem;
    border-radius: 0.25rem;
  }

  .btn {
    color: #FF6F61 !important; /* Coral for button text */
    background-color: #2A2A2A !important; /* Charcoal for button background */
    border-color: #2A2A2A !important; /* Charcoal for button border */
  }

  .btn:hover {
    color: #FFFFFF !important; /* White for button text on hover */
    background-color: #2A2A2A !important; /* Charcoal for button background on hover */
    border-color: #2A2A2A !important; /* Charcoal for button border on hover */
  }

  .actions {
    margin-top: 1em;
  }
</style>
