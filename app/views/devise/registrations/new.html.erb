<div class="container">
  <!-- Responsive row -->
  <div class="row">
    <!-- Responsive column -->
    <div class="col">
      <!-- Your HTML code -->
      <div class="signup-container">
        <h2 class="text-center text-dark">Sign Up</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-group">
            <%= f.label :name, class: 'form-label text-dark' %>
            <%= f.text_field :name, autofocus: true, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :email, class: 'form-label text-dark' %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :password, class: 'form-label text-dark' %>
            <% if @minimum_password_length %>
              <em class="text-muted">(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, class: 'form-label text-dark' %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
          </div>

          <div class="form-group form-check">
            <%= f.check_box :terms_of_service, class: 'form-check-input', required: true %>
            <%= f.label :terms_of_service, class: 'form-check-label text-dark' do %>
              I agree to the 
              <a href="#" data-bs-toggle="modal" data-bs-target="#termsModal">Terms and Conditions</a>
            <% end %>
          </div>

          <div class="form-group">
            <%= f.submit "Sign Up", class: 'btn btn-warning btn-block', data: { disable_with: "<i class='fa fa-spinner fa-spin'></i> Signing up..." } %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>

<!-- Terms and Conditions Modal (Bootstrap 5) -->
<div class="modal fade" id="termsModal" tabindex="-1" aria-labelledby="termsModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title text-dark" id="termsModalLabel">Terms and Conditions</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= render "pages/terms" %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<style>
  .signup-container {
    width: 100%;
    height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: linear-gradient(to bottom right, #FFD700, #FFA500); /* Gradient background */
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
    padding: 1rem;
  }

  .form-horizontal {
    max-width: 400px;
    margin: 20px auto;
    background-color: rgba(255, 255, 255, 0.95);
    padding: 2rem;
    border-radius: 0.5rem;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  }

  .form-control {
    border: 1px solid #ced4da;
    border-radius: 0.25rem;
    margin-bottom: 1rem;
  }

  .btn-warning {
    background-color: #FFD700; /* Hive Yellow */
    border-color: #FFD700;
    color: white;
    padding: 0.375rem 0.75rem;
    border-radius: 0.25rem;
    display: block;
    width: 100%;
  }

  .btn-warning:hover {
    background-color: #FFA500; /* Sunset Orange */
    border-color: #FFA500;
  }

  .form-horizontal .form-check {
    padding-left: 20px;
  }

  /* Media query for small devices */
  @media (max-width: 576px) {
    .signup-container {
      height: 80vh;
    }

    .form-horizontal {
      padding: 1rem;
    }
  }

  .fa-spinner {
    margin-right: 0.5rem;
  }
</style>
