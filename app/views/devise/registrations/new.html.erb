<div class="container">
    <!-- Responsive row -->
    <div class="row">
        <!-- Responsive column -->
        <div class="col">
            <!-- Your HTML code -->
            <div class="signup-container">
                <h2 class="text-center text-primary">Sign Up</h2>

                <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
                    <%= render "devise/shared/error_messages", resource: resource %>

                    <div class="form-group bg-gradient">
                        <%= f.label :name, class: 'form-label' %>
                        <%= f.text_field :name, autofocus: true, class: 'form-control' %>
                    </div>

                    <div class="form-group">
                        <%= f.label :email, class: 'form-label' %>
                        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
                    </div>

                    <div class="form-group">
                        <%= f.label :password, class: 'form-label' %>
                        <% if @minimum_password_length %>
                            <em class="text-muted">(<%= @minimum_password_length %> characters minimum)</em>
                        <% end %>
                        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
                    </div>

                    <div class="form-group">
                        <%= f.label :password_confirmation, class: 'form-label' %>
                        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
                    </div>

                    <div class="form-group">
                        <%= f.submit "Sign Up", class: 'btn btn-primary btn-block' %>
                    </div>
                <% end %>

                <%= render "devise/shared/links" %>
            </div>
        </div>
    </div>
</div>

<style>
    .signup-container {
        width: auto;
        height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        /* Add some margin */
        margin: 20px;
        /* Add a gradient background image */
        background-image: linear-gradient(to right, #2196F3, #E91E63);
        background-size: cover;
        background-repeat: no-repeat;
    }

    .form-horizontal {
        max-width: 400px;
        margin: 20px auto;
        /* Change the background color to yellow */
        background-color: #FFEB3B;
        padding: 2rem;
        border-radius: 0.5rem;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-control {
        border: 1px solid #ced4da;
        border-radius: 0.25rem;
        margin-bottom: 1rem;
        /* Add some box-shadow */
        box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
    }

    .btn-primary {
        /* Change the background color and border color to blue */
        background-color: #2196F3;
        border-color: #2196F3;
        color: white;
        padding: 0.375rem 0.75rem;
        border-radius: 0.25rem;
        display: block;
        width: 100%;
        /* Add some transition */
        transition: all 0.3s ease-in-out;
    }

    .btn-primary:hover {
        background-color: #8d6e63;
        border-color: #8d6e63;
    }

    .form-horizontal .checkbox {
        padding-left: 20px;
    }

    /* Media query for small devices (max-width: 576px) */
    @media screen and (max-width: 576px) {
        .signup-container {
            /* Reduce the height of the container */
            height: 80vh;
        }

        .form-horizontal {
            /* Reduce the padding of the form */
            padding: 1rem;
        }
    }

    /* Media query for medium devices (min-width: 577px and max-width: 768px) */
    @media screen and (min-width: 577px) and (max-width: 768px) {
        .signup-container {
            /* Change the background image to a different gradient */
            background-image: linear-gradient(to right, #FFC107, #FF5722);
        }

        .form-horizontal {
            /* Change the background color to a lighter yellow */
            background-color: #FFF9C4;
        }

        .btn-primary {
            /* Change the background color and border color to a darker blue */
            background-color: #1565C0;
            border-color: #1565C0;
        }
    }

    /* Media query for large devices (min-width: 769px) */
    @media screen and (min-width: 769px) {
        .signup-container {
            /* Change the background image to a different gradient */
            background-image: linear-gradient(to right, #4CAF50, #CDDC39);
        }

        .form-horizontal {
            /* Change the background color to a darker yellow */
            background-color: #FFD600;
        }

        .btn-primary {
            /* Change the background color and border color to a lighter blue */
            background-color: #64B5F6;
            border-color: #64B5F6;
        }
    }

    .text-primary {
        /* Change the color to yellow */
        color: #FFEB3B;
    }
</style>
