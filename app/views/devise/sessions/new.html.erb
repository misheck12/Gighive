<div class="login-container">
  <div class="login-form">
    <h2 style="text-align: center; margin-bottom: 1.5rem;">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
      <div class="form-group">
        <%= f.label :email, class: 'control-label' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password, class: 'control-label' %>
        <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group">
          <div class="checkbox">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.submit "Log in", class: 'btn btn-warning btn-block', data: { disable_with: "<i class='fa fa-spinner fa-spin'></i> Logging in..." } %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

<style>
  .login-container {
    width: auto;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    padding: 1rem;
    background: linear-gradient(to bottom right, #FFD700, #FFA500); /* Bee-themed background with gradient */
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
  }

  .login-form {
    padding: 2rem;
    background: rgba(255, 255, 255, 0.85);
    border-radius: 0.5rem;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    max-width: 400px;
    width: 100%;
    margin: auto;
  }

  .form-control {
    margin-bottom: 1rem;
  }

  .btn-warning {
    background-color: #FFD700; /* Hive Yellow */
    border-color: #FFD700;
    color: white;
  }

  .btn-warning:hover {
    background-color: #FFA500; /* Sunset Orange */
    border-color: #FFA500;
  }

  .form-horizontal .checkbox {
    padding-left: 20px;
  }

  @media (max-width: 768px) {
    .login-form {
      padding: 1.5rem;
    }

    .form-control {
      font-size: 1rem;
    }

    .btn-warning {
      font-size: 1rem;
    }
  }

  .fa-spinner {
    margin-right: 0.5rem;
  }
</style>
