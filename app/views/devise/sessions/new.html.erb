<div class="login-container">
  <div class="login-form">
    <h2 style="text-align: center; margin-bottom: 1.5rem;">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
      <div class="form-group">
        <%= f.label :email, class: 'control-label' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password, class: 'control-label' %>
        <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group">
          <div class="checkbox">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.submit "Log in", class: 'btn btn-primary btn-block', data: { disable_with: "<i class='fa fa-spinner fa-spin'></i> Logging in..." } %>
      </div>
    <% end %>

    <div class="devise-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

<style>
  .login-container {
    width: 100%; /* Use full width */
    min-height: 100vh; /* Ensure it covers at least the full viewport height */
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 20px; 
    background: linear-gradient(135deg, #FFD700, #FFA500); /* Adjusted gradient for a warmer feel */
  }

  .login-form {
    background-color: rgba(255, 255, 255, 0.9); /* Increased opacity for better readability */
    padding: 30px; /* More padding for a spacious feel */
    border-radius: 10px; /* Softer corners */
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2); /* More pronounced shadow */
    max-width: 450px; /* Slightly wider form */
    width: 100%; /* Responsive width */
    text-align: center; /* Center align all content within the form */
  }

  .login-form h2 {
    font-weight: 600; /* Bolder heading */
    color: #333; /* Darker text for contrast */
    margin-bottom: 30px; /* More space below heading */
  }

  .form-group {
    margin-bottom: 20px; /* More space between form groups */
  }

  .form-control {
    border: 1px solid #ced4da; /* Subtle border for inputs */
    padding: 10px 15px; /* More padding inside inputs */
    border-radius: 5px; /* Rounded input fields */
    font-size: 16px; /* Larger font size for readability */
  }

  .form-control:focus {
    border-color: #FFD700; /* Highlight color on focus */
    box-shadow: 0 0 0 0.2rem rgba(255, 215, 0, 0.25); /* Focus glow effect */
  }

  .checkbox {
    display: flex; /* Align checkbox and label */
    align-items: center; /* Vertical alignment */
    justify-content: flex-start; /* Start alignment */
  }

  .form-group .checkbox label {
      margin-bottom: 0;
      margin-left: 5px;
  }

  .btn-primary {
    background-color: #FF4500; /* Sunset Orange */
    border: none;
    padding: 10px 20px;
    font-size: 18px;
    border-radius: 5px;
    transition: background-color 0.3s ease; /* Smooth transition for hover effect */
    width: 100%; /* Full-width button */
  }

  .btn-primary:hover {
    background-color: #FFD700; /* Hive Yellow on hover */
  }

  .btn-primary:focus {
      outline: none;
      box-shadow: 0 0 0 3px rgba(255, 165, 0, 0.5);
  }

  .btn-primary[data-disable-with] {
      position: relative;
      padding-left: 35px; /* Make room for the spinner */
  }

  .btn-primary[data-disable-with] .fa-spinner {
      position: absolute;
      left: 15px; /* Position the spinner inside the button */
      top: 50%;
      transform: translateY(-50%);
      margin-right: 0;
  }

  .fa-spinner {
    margin-right: 10px;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .login-form {
      padding: 20px;
      max-width: 90%; /* More responsive width on smaller screens */
    }

    .form-control {
      font-size: 14px;
    }
  }

  /* Styling for Devise links */
  .devise-links a {
    color: #FF4500; /* Matching link color */
    text-decoration: none;
  }

  .devise-links a:hover {
    text-decoration: underline;
  }
</style>