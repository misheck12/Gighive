<div class="contact-us-container py-5">
  <div class="container">
    <header class="text-center mb-5">
      <h1 class="display-4 font-weight-bold text-teal">Contact GigHive</h1>
      <p class="lead text-muted">We'd love to hear from you!</p>
    </header>

    <section class="contact-info mb-5">
      <div class="row">
        <div class="col-md-4 col-sm-6 col-12 mb-4 text-center">
          <div class="contact-card">
            <i class="fas fa-map-marker-alt fa-3x text-teal"></i>
            <h4 class="font-weight-bold mt-3">Our Location</h4>
            <address class="text-muted">
              123 Hive Street<br>
              Suite 456<br>
              Bee City, CA 90210<br>
              United States
            </address>
          </div>
        </div>
        <div class="col-md-4 col-sm-6 col-12 mb-4 text-center">
          <div class="contact-card">
            <i class="fas fa-phone fa-3x text-teal"></i>
            <h4 class="font-weight-bold mt-3">Phone Number</h4>
            <p class="text-muted">
              <a href="tel:+15555551212" class="text-muted">+1-555-555-1212</a> (Main Office)
            </p>
          </div>
        </div>
        <div class="col-md-4 col-sm-12 mb-4 text-center">
          <div class="contact-card">
            <i class="fas fa-envelope fa-3x text-teal"></i>
            <h4 class="font-weight-bold mt-3">Email Address</h4>
            <p class="text-muted">
              <a href="mailto:support@gighive.com" class="text-muted">support@gighive.com</a> (Support)
            </p>
          </div>
        </div>
      </div>
    </section>

    <section class="contact-form">
      <div class="row">
        <div class="col-lg-8 mx-auto">
          <h2 class="text-center font-weight-bold text-teal mb-4">Send Us a Message</h2>
          <form id="contact-form" method="post" action="#" role="form">
            <div class="form-group">
              <label for="name" class="font-weight-bold">
                <i class="fas fa-user text-teal"></i> Name
              </label>
              <input id="name" type="text" name="name" class="form-control form-control-lg" placeholder="Enter your name" required>
            </div>
            <div class="form-group">
              <label for="email" class="font-weight-bold">
                <i class="fas fa-envelope text-teal"></i> Email
              </label>
              <input id="email" type="email" name="email" class="form-control form-control-lg" placeholder="Enter your email" required>
            </div>
            <div class="form-group">
              <label for="subject" class="font-weight-bold">
                <i class="fas fa-tag text-teal"></i> Subject
              </label>
              <input id="subject" type="text" name="subject" class="form-control form-control-lg" placeholder="Enter the subject" required>
            </div>
            <div class="form-group">
              <label for="message" class="font-weight-bold">
                <i class="fas fa-comment text-teal"></i> Message
              </label>
              <textarea id="message" name="message" class="form-control form-control-lg" rows="5" placeholder="Enter your message" required></textarea>
            </div>
            <button type="submit" class="btn btn-teal btn-block font-weight-bold shadow-sm btn-lg">Send Message</button>
          </form>
        </div>
      </div>
    </section>
  </div>
</div>

